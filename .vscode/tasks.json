{
	"version": "0.1.0",
	"linux": {
		"command": "xbuild",
		"args": ["CivOne.Unix.csproj", "/t:Rebuild"]
	},
	"osx": {
		"command": "sh",
		"isShellCommand": true,
		"showOutput": "always",
		"tasks": [
			{
				"taskName": "build",
				"suppressTaskName": true,
				"isBuildCommand": true,
				"args": ["xbuild", "CivOne.Mac.csproj", "/t:Rebuild"]
			},
			{
				"taskName": "run",
				"suppressTaskName": true,
				"isTestCommand": true,
				"args": ["${workspaceRoot}/resources/osx/osx-run.sh"],
				"showOutput": "always"
			}
		]
	},
	"windows": {
		"command": "cmd",
		"isShellCommand": true,
		"showOutput": "always",
		"args": ["/C"],
		"tasks": [
			{
				"taskName": "build",
				"suppressTaskName": true,
				"isBuildCommand": true,
				"args": ["xbuild", "${workspaceRoot}/CivOne.Win32.csproj", "/t:Rebuild"]
			},
			{
				"taskName": "run",
				"suppressTaskName": true,
				"isTestCommand": true,
				"args": ["${workspaceRoot}/bin/CivOne.exe"]
			},
			{
				"taskName": "setup",
				"suppressTaskName": true,
				"args": ["${workspaceRoot}/bin/CivOne.exe", "setup"]
			}
		]
	}
}