{
	"version": "0.1.0",
	"linux": {
		"command": "xbuild",
		"args": ["CivOne.Unix.csproj", "/t:Rebuild"]
	},
	"osx": {
		"command": "sh",
		"isShellCommand": true,
		"showOutput": "always",
		"tasks": [
			{
				"taskName": "build",
				"suppressTaskName": true,
				"isBuildCommand": true,
				"args": ["xbuild", "CivOne.Mac.csproj", "/t:Rebuild"]
			},
			{
				"taskName": "run",
				"suppressTaskName": true,
				"isTestCommand": true,
				"args": ["${workspaceRoot}/resources/osx/osx-run.sh"],
				"showOutput": "always"
			}
		]
	},
	"windows": {
		"command": "build.bat",
		"args": ["xbuild"],
		"tasks": [
			{
				"taskName": "build",
				"isBuildCommand": true,
				"args": [
					"build", "Debug"
				]
			},
			{
				"taskName": "run",
				"isTestCommand": true,
				"args": [
					"run"
				]
			},
			{
				"taskName": "setup",
				"args": [
					"setup"
				]
			}
		]
	}
}