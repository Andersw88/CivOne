{
	"version": "0.1.0",
	"linux": {
		"command": "xbuild",
		"args": ["CivOne.Unix.csproj", "/t:Rebuild"]
	},
	"osx": {
		"command": "xbuild",
		"args": ["CivOne.Unix.csproj", "/t:Rebuild"]
	},
	"windows": {
		"command": "build.bat",
		"args": ["xbuild"],
		"tasks": [
			{
				"taskName": "build",
				"isBuildCommand": true,
				"args": [
					"build", "Debug"
				]
			},
			{
				"taskName": "run",
				"isTestCommand": true,
				"args": [
					"run"
				]
			},
			{
				"taskName": "setup",
				"args": [
					"setup"
				]
			}
		]
	}
}