// These are the settings for editing CivOne in Visual Studio Code.
// Please do not change them!
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Game",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceRoot}\\bin\\Debug\\netcoreapp1.1\\CivOne.dll",
			"args": [],
			"cwd": "${workspaceRoot}",
			"externalConsole": false,
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Launch Setup",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceRoot}\\bin\\Debug\\netcoreapp1.1\\CivOne.dll",
			"args": ["setup"],
			"cwd": "${workspaceRoot}",
			"externalConsole": false,
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Launch Demo",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceRoot}\\bin\\Debug\\netcoreapp1.1\\CivOne.dll",
			"args": ["demo"],
			"cwd": "${workspaceRoot}",
			"externalConsole": false,
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Attach Process",
			"type": "coreclr",
			"request": "attach",
			"processId": "${command.pickProcess}"
		}
	]
}